{
  "compiler": {
    "dir": "./.compiler",
    "version": "1.9.0-git5294",
    "dev": true,
    "addons": [],
    "executable": "amxxpc"
  },
  "thirdparty": {
    "dir": "./.thirdparty",
    "dependencies": [
      {
        "name": "curl",
        "url": "https://github.com/7mochi/llhl-resources/raw/master/amxx-related/curl-1.1.1/curl.zip"
      },
      {
        "name": "hlstocks-include",
        "url": "https://github.com/7mochi/llhl-resources/raw/master/amxx-related/half-life-stocks/hlstocks.zip"
      },
      {
        "name": "metamod",
        "url": "https://www.amxmodx.org/release/metamod-1.21.1-am.zip"
      },
      {
        "name": "gm_block",
        "url": "https://github.com/7mochi/llhl-resources/raw/master/metamod-plugins/ghostmineblock-1.5/gm_block.zip"
      }
    ]
  },
  "include": [
    "./.compiler/include",
    "./.thirdparty/curl/addons/amxmodx/scripting/include",
    "./.thirdparty/hlstocks-include"
  ],
  "input": {
    "scripts": "./src/scripts",
    "assets": [
      { "dir": "./assets" },
      {
        "dir": "./.thirdparty/metamod/addons/metamod/dlls",
        "dest": "./addons/metamod/dlls",
        "filter": "*.dll"
      },
      {
        "dir": "./.thirdparty/gm_block",
        "dest": "./addons/metamod/dlls",
        "filter": "*.dll"
      },
      {
        "dir": "./.thirdparty/curl/addons/amxmodx/modules",
        "dest": "./addons/amxmodx/modules",
        "filter": "*.dll"
      }
    ]
  },
  "output": {
    "plugins": "./dist/ag/addons/amxmodx/plugins",
    "assets": "./dist/ag",
    "scripts": "./dist/ag/addons/amxmodx/scripting",
    "include": "./dist/ag/addons/amxmodx/scripting/include"
  },
  "rules": {
    "flatCompilation": true
  }
}